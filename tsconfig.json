{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"rootDirs": [
			"..",
			"./types"
		],
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "es2022",
		"moduleResolution": "node",
		"target": "es2022",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"types": [
			"vitest/globals"
		]
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
	]
}
