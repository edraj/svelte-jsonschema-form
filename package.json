{
	"name": "svelte-jsonschema-form",
	"version": "0.6.0",
	"description": "A Svelte component for generating forms from JSON Schema.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/webgme/svelte-jsonschema-form.git"
	},
	"main": "./dist/index.js",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"build:static": "npm run build --static && npm run build:theme",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"prepare": "npm run build"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"main": "./dist/index.js",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/theme"
	],
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"@types/json-schema": "^7.0.12",
		"@types/json-schema-merge-allof": "^0.6.1",
		"publint": "^0.1.9",
		"sass": "^1.69.4",
		"svelte": "^4.2.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vitest": "^0.25.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@json-schema-tools/dereferencer": "^1.6.1",
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"core-js": "^3.31.1",
		"fast-deep-equal": "^3.1.3",
		"json-schema-merge-allof": "^0.8.1",
		"json-schema-traverse": "^1.0.0",
		"svelte-portal": "^2.2.0",
		"sveltestrap": "edraj/sveltestrap#extending-UI"
	}
}
